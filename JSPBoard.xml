<Context path="/JSPBoard" docBase="/home/dave/java/JSPBoard/webapp" debug="0">

	<Realm className="org.apache.catalina.realm.JDBCRealm" debug="0"
  		driverName="com.mysql.jdbc.Driver"
      connectionPassword="tomcat379"
      connectionURL="jdbc:mysql://localhost/JSPBoard?user=tomcat"
      userTable="Login" userNameCol="id" userCredCol="password"
      userRoleTable="UserGroup" roleNameCol="group_id" digest="MD5"/>

	<Logger className="org.apache.catalina.logger.FileLogger"
			directory="logs"  prefix="jspboard." suffix=".txt"
			timestamp="true"/>

  <Resource name="jdbc/JSPBoardDB" scope="Shareable" type="javax.sql.DataSource"/>

  <ResourceParams name="jdbc/JSPBoardDB">
      <parameter>
          <name>driverClassName</name>
          <value>com.mysql.jdbc.jdbc2.optional.MysqlDataSource</value>
      </parameter>
      <parameter>
          <name>url</name>
          <value>jdbc:mysql://localhost/JSPBoard</value>
      </parameter>
      <parameter>
          <name>username</name>
          <value>JSPBoard</value>
      </parameter>
      <parameter>
          <name>password</name>
          <value>jspb379</value>
      </parameter>
      <parameter>
          <name>maxWait</name>
          <value>5000</value>
      </parameter>
      <parameter>
          <name>maxActive</name>
          <value>4</value>
      </parameter>
      <parameter>
          <name>maxIdle</name>
          <value>2</value>
      </parameter>
  </ResourceParams>

</Context>
